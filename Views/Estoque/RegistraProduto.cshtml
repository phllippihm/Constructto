@model Constructto.Models.EstoqueViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
      
        <div class="col-md-12 text-start">
            <a href="@Url.Action("ListaEstoque", "Estoque")" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="col-md-8">
            <img src="/Imagens/foto.png" alt="Logo" class="login-logo mx-auto d-block mb-4" />
        </div>
    </div>

    <form asp-action="RegistraProduto" method="post">
        <!-- Campo oculto para o ID do produto (necessário para a edição) -->
       

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NomeProduto">Nome: </label>
                <input asp-for="NomeProduto" class="form-control" />
                <span asp-validation-for="NomeProduto" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Quantidade">Quantidade: </label>
                <input asp-for="Quantidade" class="form-control" type="number" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Preco">Preço: </label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Fornecedor">Fornecedor: </label>
                <input asp-for="Fornecedor" class="form-control" />
                <span asp-validation-for="Fornecedor" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="DataDeEntrada">Data de Entrada: </label>
                <input asp-for="DataDeEntrada" class="form-control" type="date" value="@(Model.DataDeEntrada == DateTime.MinValue ? DateTime.Now.ToString("yyyy-MM-dd") : Model.DataDeEntrada.ToString("yyyy-MM-dd"))" />
                <span asp-validation-for="DataDeEntrada" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Salvar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

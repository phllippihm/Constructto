@model Constructto.Models.FuncionarioViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12 text-start">
            <a href="@Url.Action("ListaFuncionarios", "Funcionario")" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="col-md-8">
            <h2>Registrar Funcionário</h2>
        </div>
    </div>

    <form asp-action="RegisterFuncionario" method="post">
        <input type="hidden" asp-for="Id" />


        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CPF">CPF</label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="DataNascimento">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" type="date" value="@(Model.DataNascimento == DateTime.MinValue ? DateTime.Now.ToString("yyyy-MM-dd") : Model.DataNascimento.ToString("yyyy-MM-dd"))" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Sexo">Sexo</label>
                <select asp-for="Sexo" class="form-control">
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Telefone">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CarteiraHabilitacao">Possui Carteira de Habilitação?</label>
                <select asp-for="CarteiraHabilitacao" class="form-control">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="CarteiraHabilitacao" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="TemFilhos">Possui Filhos?</label>
                <select asp-for="TemFilhos" class="form-control">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="TemFilhos" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Salario">Salário</label>
                <input asp-for="Salario" class="form-control" type="number" step="0.01" pattern="^\d*(\.\d{1,2})?$" placeholder="0.00" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FormaPagamento">Forma de Pagamento</label>
                <input asp-for="FormaPagamento" class="form-control" />
                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="FrequenciaPagamento">Frequência de Pagamento</label>
                <input asp-for="FrequenciaPagamento" class="form-control" />
                <span asp-validation-for="FrequenciaPagamento" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CarteiraAssinada">Carteira Assinada?</label>
                <select asp-for="CarteiraAssinada" class="form-control">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="CarteiraAssinada" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Qualidades">Principais Qualidades</label>
                <input asp-for="Qualidades" class="form-control" />
                <span asp-validation-for="Qualidades" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="TamanhoEpis">Tamanho de EPIs</label>
                <input asp-for="TamanhoEpis" class="form-control" />
                <span asp-validation-for="TamanhoEpis" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Altura">Altura (em centímetros)</label>
                <input asp-for="Altura" type="text" class="form-control" type="decimal"  />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="Endereco">Endereço</label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3" style="display: none;">
            <div class="col-md-6">
                <label for="ObraId">Obra</label>
                <select asp-for="ObraId" class="form-control">
                    <option value="">Selecione uma Obra</option>
                </select>
                <span asp-validation-for="ObraId" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Salvar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    
}
